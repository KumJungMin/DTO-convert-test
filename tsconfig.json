{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,      // 데코레이터 사용을 위해 활성화
    "emitDecoratorMetadata": true,       // 메타데이터 방출을 위해 활성화
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}